# Server Environment Variables
SESSION_SECRET="your-strong-session-secret"
DATABASE_URL="postgresql://username:password@hostname:port/database?sslmode=require"
PGDATABASE="database"
PGPORT="5432"
PGUSER="username"
PGPASSWORD="password"
PGHOST="hostname"

# Email Configuration
EMAIL_USER="your-email@example.com"
EMAIL_PASS="your-email-password-or-app-password"

# API Keys (Backend Only)
OPENAI_API_KEY="your-openai-api-key"

# Frontend Environment Variables (must be prefixed with VITE_)
VITE_API_URL="https://www.your-production-domain.com"
VITE_ENV="production"  # or "development"
VITE_NUTRITIONIX_APP_ID="your-nutritionix-app-id"
VITE_NUTRITIONIX_API_KEY="your-nutritionix-api-key"
VITE_GOOGLE_CLOUD_VISION_API_KEY="your-google-cloud-vision-api-key"

# Note: Variables without VITE_ prefix are only available on the server
# Variables with VITE_ prefix are available on both server and client